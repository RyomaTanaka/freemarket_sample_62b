= render "module/header"


%body.mypage-body        
  
  %nav.breadcrumbs
    %ul
      %li{ itemscope: "", itemtype: "#"}
        = link_to "", 
        href: "#", itemprop: "url" do
          %span{ itemprop: "title"}
            メルカリ
            = fa_icon 'chevron-right'
      %li{ itemscope: "", itemtype: "#"}
        %span{ itemprop: "title"}
          マイページ
          = fa_icon 'chevron-right'
      %li{ itemscope: "", itemtype: "#"}
        %span{ itemprop: "title"}
          本人情報の登録

  %main.container
    .personal-container
      %section.personal-content
        %h2 本人情報の登録
        %form
          .personal-content__text
            %p
              お客様の本人情報をご登録ください。
              %br
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            %p.text__link
              = link_to "", href: "#" do
                本人確認書類のアップロードについて
                = fa_icon 'chevron-right'
          .personal-content__info
            %label
              お名前
            %p
              金子俊
          .personal-content__info
            %label
              お名前
            %p
              金子俊
          .personal-content__info
            %label{ for: "birthday" }
              生年月日
            %p
              1995/01/30
          .personal-content__info
            %label{ for: "postal-code" }
              郵便番号
            %span.any
              任意
            %input.default-value{ type: "text", value: "", name: "postal-code", placeholder: "例) 1234567" }
          .personal-content__info
            %label{ for: "prefecture" }
              都道府県
            %span.any
              任意
            .select-prefecture
              = fa_icon 'chevron-down'
              %select.select-default-value{ name: "prefecture"}
                %option --
                %option 北海道
                %option 青森県
                %option 岩手県
                %option 宮城県
                %option 秋田県
                %option 山形県
                %option 福島県
                %option 東京都
                %option 神奈川県
                %option 埼玉県
                %option.selected 千葉県
                %option 茨城県
                %option 栃木県
                %option 群馬県
                %option 山梨県
                %option 新潟県
                %option 長野県
                %option 富山県
                %option 石川県
                %option 福井県
                %option 愛知県
                %option 岐阜県
                %option 静岡県
                %option 三重県
                %option 大阪府
                %option 兵庫県
                %option 京都府
                %option 滋賀県
                %option 奈良県
                %option 和歌山県
                %option 鳥取県
                %option 島根県
                %option 岡山県
                %option 広島県
                %option 山口県
                %option 徳島県
                %option 香川県
                %option 愛媛県
                %option 高知県
                %option 福岡県
                %option 佐賀県
                %option 長崎県
                %option 熊本県
                %option 大分県
                %option 宮崎県
                %option 鹿児島県
                %option 沖縄県
          .personal-content__info
            %label{ for: "city" }
              市区町村
            %span.any
              任意
            %input.default-value{ type: "text", value: "", name: "city", placeholder: "例) 横浜市緑区" }
          .personal-content__info
            %label{ for: "address_label"}
              番地
            %span.any
              任意
            %input.default-value{ type: "text", value: "", name: "address", placeholder: "例) 青山1-1-1" }
          .personal-content__info
            %label{ for: "building_label" }
              建物名
            %span.any
              任意
            %input.default-value{ type: "text", value: "", name: "building", placeholder: "例) 柳ビル103" }
          %button.btn-default-value.btn-color-red.btn-personal-edit{ type: "submit" }
            登録する
        .personal-content__link
          %p
            = link_to "", href: "#" do
              本人情報の登録について
              = fa_icon 'chevron-right'

    = render "module/content-left"      
= render "module/footer"
= render "module/right_btn"