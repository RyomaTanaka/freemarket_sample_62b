/* 元　personal.html.haml */
-# 個人情報画面で使います。 

= render "module/header"


.mypage-body        
  - breadcrumb :personal
  = render partial: "layouts/breadcrumbs"

  %main.container
    .personal-container
      %section.personal-content
        %h2 本人情報の登録
        %form
          .personal-content__text
            %p
              お客様の本人情報をご登録ください。
              %br
              登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
            %p.text__link
              = link_to "", href: "#" do
                本人確認書類のアップロードについて
                = fa_icon 'chevron-right'

          .personal-content__info
            %label
              お名前
            %p
              = "#{current_user.family_name} #{current_user.first_name}"
          .personal-content__info
            %label{ for: "birthday" }
              生年月日
            %p
              = "#{current_user.birth_year}/#{current_user.birth_month}/#{current_user.birth_day}"


          .personal-content__info
          = form_with model: @address, url: address_path, method: :patch, local: true do |f|
            .personal-content__info
              = f.label :郵便番号
              %span.any
                任意
              = f.text_field :post_number, class: "default-value", type: "text", placeholder: "例) 1234567" 
            .personal-content__info
              = f.label :都道府県
              %span.any
                任意
              .select-prefecture
                = fa_icon 'chevron-down'
                = f.select :prefecure, [ ["北海道"],["青森県"],["岩手県"],["宮城県"],["秋田県"],["山形県"],["福島県"],["東京都"],["神奈川県"],["埼玉県"],["千葉県"],["茨城県"],["栃木県"],["群馬県"],["山梨県"],["新潟県"],["長野県"],["富山県"],["石川県"],["福井県"],["愛知県"],["岐阜県"],["静岡県"],["三重県"],["大阪府"],["兵庫県"],["京都府"],["滋賀県"],["奈良県"],["和歌山県"],["鳥取県"],["島根県"],["岡山県"],["広島県"],["山口県"],["徳島県"],["香川県"],["愛媛県"],["高知県"],["福岡県"],["佐賀県"],["長崎県"],["熊本県"],["大分県"],["宮崎県"],["鹿児島県"],["沖縄県"] ], {}, class: "select-default-value"
            .personal-content__info
              = f.label :市区町村
              %span.any
                任意
              = f.text_field :city, class: "default-value", type: "text", placeholder: "例) 横浜市緑区" 
            .personal-content__info
              = f.label :番地
              %span.any
                任意
              = f.text_field :house_number, class: "default-value", type: "text", placeholder: "例) 青山1-1-1" 
            .personal-content__info
              = f.label :建物名
              %span.any
                任意
              = f.text_field :building_name, class: "default-value", type: "text", placeholder: "例) 柳ビル103" 
            = f.button :登録する, class: "logbtn3 btn-personal-edit", type: "submit" 
              
          .personal-content__link
            %p
              = link_to "", href: "#" do
                本人情報の登録について
                = fa_icon 'chevron-right'

    = render "module/content-left"      
= render "module/footer"
= render "module/right_btn"
