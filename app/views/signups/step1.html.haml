.main
  = render "devise_header"
  .form
    .form__top
      .form__top__text
        会員情報入力
    .form__field
      = form_with model: @user, url: step2_signups_path, method: :get, local: true do |f|
        .form__field__nickname
          .form__field__nickname__box1
            = f.label :nickname, value: 'ニックネーム'
          .form__field__nickname__box2
            必須
          %br/
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
        .form__field__mail
          .form__field__mail__box1
            = f.label :email
          .form__field__mail__box2
            = f.label :必須
          %br/
          = f.email_field :email, autocomplete: "email"
        -# - unless @sns.present?
        -#   .form__field__pass
