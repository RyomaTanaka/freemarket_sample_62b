.item-container
  %ul.item-container__lists
    - @items.each do |item|
      %li.item-container__lists__list
        .item-box
          =link_to item_path(item.id), class: "item-link" do
            %figure.item-descrube
              %figcaption
                %span
                  = item.name #商品の名前の取得
              .item-price
                %span{"aria-label": "Price"}
                  ¥
                  = item.price #商品の値段の取得
                = image_tag item.images[0].image.url, class: 'item-photo' #商品の画像の一枚目を取得